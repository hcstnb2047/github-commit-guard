{
  "manifest_version": 3,
  "name": "GitHub Commit Timer",
  "version": "1.0.0",
  "description": "コミット習慣でサイトアクセス時間制御 - GitHubコントリビューションベース",
  
  "permissions": [
    "webRequest",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "https://api.github.com/*",
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "GitHub Commit Guard"
  },
  
  "options_page": "options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}